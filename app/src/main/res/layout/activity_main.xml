<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageview_logo"
            android:layout_marginTop="30dp"
            android:src="@drawable/download"
            android:maxWidth="180dp"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_main_head"
            android:layout_marginTop="30dp"
            android:text="welcome to the T and P portal"
            android:textAlignment="center"
            android:layout_below="@id/imageview_logo"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_login_email"
            android:hint="USERNAME"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/textview_main_head"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/border"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_login_pwd"
            android:hint="PASSWORD"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:inputType="textPassword"
            android:layout_below="@id/edittext_login_email"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/buttonlogin"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_login_pwd"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="24dp"

            android:text="LOGIN" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_password"
            android:text="Forgot Password"
            android:layout_below="@+id/buttonlogin"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:text="Register here"
            android:layout_below="@+id/buttonlogin"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="245dp"
            android:layout_marginTop="25dp"/>

    </RelativeLayout>

</ScrollView>